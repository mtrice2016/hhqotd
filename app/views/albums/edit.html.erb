<!-- Validation failure messages -->

<% if @album.errors.any? %>
  <% @album.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Album #<%= @album.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_album/<%= @album.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for title -->
          <div class="form-group">
            <label for="title" class="col-sm-2 control-label">
              Title
            </label>
            <div class="col-sm-10">
              <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @album.title %>">
            </div>
          </div>

          <!-- Label and input for artist_id -->
          <div class="form-group">
            <label for="artist_id" class="col-sm-2 control-label">
              Artist
            </label>
            <div class="col-sm-10">
             <%= select_tag(:artist_id, options_from_collection_for_select(Artist.order(:artist), :id, :artist, @album.artist_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for year -->
          <div class="form-group">
            <label for="year" class="col-sm-2 control-label">
              Year
            </label>
            <div class="col-sm-10">
              <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="<%= @album.year %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Album
              </button>
              or
              <a href="/albums/<%= @album.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->

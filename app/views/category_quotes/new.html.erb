<!-- Validation failure messages -->

<% if @category_quote.errors.any? %>
  <% @category_quote.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Category Quote</h3>
      </div>
      <div class="panel-body">
        <form action="/create_category_quote" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for quote_id -->
          <div class="form-group">
            <label for="quote_id" class="col-sm-2 control-label">
              Quote
            </label>
            <div class="col-sm-10">

              <%= select_tag(:quote_id, options_from_collection_for_select(Quote.all, :id, :lyric, @category_quote.quote_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for category_id -->
          <div class="form-group">
            <label for="category_id" class="col-sm-2 control-label">
              Category
            </label>
            <div class="col-sm-10">


              <%= select_tag(:category_id, options_from_collection_for_select(Category.order(:name), :id, :name, @category_quote.category_id), :class => "form-control") %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Category Quote
              </button>
              or
              <a href="/category_quotes">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

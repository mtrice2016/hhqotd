<!-- Validation failure messages -->

<% if @category_quote.errors.any? %>
  <% @category_quote.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Category Quote #<%= @category_quote.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_category_quote/<%= @category_quote.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for quote_id -->
          <div class="form-group">
            <label for="quote_id" class="col-sm-2 control-label">
              Quote
            </label>
            <div class="col-sm-10">
              <input type="text" id="quote_id" name="quote_id" placeholder="Quote" class="form-control" value="<%= @category_quote.quote_id %>">
            </div>
          </div>

          <!-- Label and input for category_id -->
          <div class="form-group">
            <label for="category_id" class="col-sm-2 control-label">
              Category
            </label>
            <div class="col-sm-10">
              <input type="text" id="category_id" name="category_id" placeholder="Category" class="form-control" value="<%= @category_quote.category_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Category Quote
              </button>
              or
              <a href="/category_quotes/<%= @category_quote.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
